<h1>Contact Us</h1>

<%= flash [:notice] %>

<p>If you have any information on any of our products, please contact in any of the following ways:</p>

<p>Email: aaaaaa@gmail.com</p>
<p>Telephone: 00000 000000</p>

<%= form_tag("/static_pages/thank_you") d0 %>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
            <%= label_tag :message %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        </div>
    </div>
</div>
<%= submit_tag "Send" %>
<% end %>
